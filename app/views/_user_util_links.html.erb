<% if user_signed_in? %>
    <li id="user_utility_links">
      <%= render partial: 'users/notify_link' %>
    </li>
    <li>
      <%= link_to sufia.dashboard_index_path, id: "dashboard_link" do %>
          <span class="glyphicon glyphicon-dashboard"></span>
          <span class="sr-only">Select to access</span>
          <span class="hidden-xs">&nbsp;<%= current_user.name %></span>
          <span class="sr-only"> dashboard</span>
      <% end %>
    </li>
    <li>
      <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="sr-only">select for additional menu options</span><span class="caret" ></span></a>
      <ul class="dropdown-menu">
        <% if can? :create, FileSet %>
            <li><%= link_to raw('<span class="glyphicon glyphicon-upload"></span> upload'), sufia.new_curation_concerns_file_set_path, id: 'upload_nav_link' %></li>
        <% end %>
        <li><%= link_to raw('<span class="glyphicon glyphicon-user"></span> my profile'), sufia.profile_path(current_user), id: 'profile_nav_link' %></li>
        <%= render partial: 'users/user_util_links_extra' %>
        <li class="divider"></li>
        <li><%= link_to raw('<span class="glyphicon glyphicon-log-out"></span> log out'), main_app.destroy_user_session_path, id: 'logout_nav_link' %></li>
      </ul>
    </li><!-- /.btn-group -->
<% else %>
    <li>
      <%= link_to raw('<span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login'), main_app.new_user_session_path, title: "Login" %>
    </li>
<% end %>